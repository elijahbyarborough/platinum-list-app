{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 300
    }
  },
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/refresh-prices",
      "schedule": "0 14 * * 1-5"
    },
    {
      "path": "/api/generate-snapshot",
      "schedule": "0 13 * * *"
    }
  ]
}

